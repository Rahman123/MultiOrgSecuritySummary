    <decisions>
        <name>Custom_Notification_Type_Found</name>
        <label>Custom Notification Type Found</label>
        <locationX>643</locationX>
        <locationY>265</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Type_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>notificationTypeId</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Convert_Single_Id_to_List</targetReference>
            </connector>
            <label>Type Found</label>
        </rules>
        <rules>
            <name>Type_Not_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>notificationTypeId</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Custom_Notification_Type</targetReference>
            </connector>
            <label>Type Not Found</label>
        </rules>
    </decisions>
    <decisions>
        <description>Determine the type of message you would like to send to the responsible admin</description>
        <name>Messaging_Type</name>
        <label>Messaging Type</label>
        <locationX>330</locationX>
        <locationY>52</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>SendEmail</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Type</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Email</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Email_to_Admin</targetReference>
            </connector>
            <label>SendEmail</label>
        </rules>
        <rules>
            <name>Notification</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Type</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Notification</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Custom_Notification_Type</targetReference>
            </connector>
            <label>Notification</label>
        </rules>
    </decisions>
    <description>A reuseable flow for sending notifications to users who are responsible for managing security orgs.</description>
